@page "{roomId}"
@using PlanningPoker.Services
@using System.Web
@inject IuserService _userService
@inject InameService _nameService


@{
    ViewData["Title"] = "Poker room";
    string userName = string.Empty;
    string userNameUnesp = string.Empty;
    var cookieUserName = Request.Cookies["userName"];

    var roomName = string.Empty;

    if (RouteData.Values["roomId"] != null)
    {
        roomName = RouteData.Values["roomId"].ToString();
    }
    else
    {
        Response.Redirect("/");
    }

    if (cookieUserName != null)
    {

        //uri decode the cookie value
        userName = await _userService.CheckAndGetUserName(cookieUserName, roomName);

        if(!cookieUserName.Equals(userName, StringComparison.OrdinalIgnoreCase))
        {
            //update cookie.
            if (Request.Cookies.TryGetValue("userName", out var cookieValue))
            {
                Response.Cookies.Append("userName", userName, new CookieOptions
                {
                    Expires = DateTimeOffset.UtcNow.AddDays(1)
                });
            }
        }
        userNameUnesp = Uri.UnescapeDataString(userName);
    }
    else
    {

       Response.Redirect($"/?returnUrl=/room/{roomName}");
    }
  
}

