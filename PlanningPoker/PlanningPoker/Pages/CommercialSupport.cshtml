@page
@model PlanningPoker.Pages.CommercialSupportModel
@{
    ViewData["Title"] = "Commercial Support";
}

<div class="container commercial-support">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <!-- Hero Section -->
            <div class="hero-section">
                <h1 class="hero-title">Commercial Support</h1>
                <p class="hero-subtitle">
                    Planning Poker is <strong>free and open-source</strong>.
                    For teams and organizations that need additional help, long-term stability, or custom features,
                    commercial support is available.
                </p>
            </div>

            <!-- Features Grid -->
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-tools"></i>
                        </div>
                        <h3>Support & Hosting Help</h3>
                        <ul class="feature-list">
                            <li><i class="bi bi-check-circle-fill"></i>Help setting up self-hosted deployments (Docker,
                                VPS, reverse proxy, SSL)</li>
                            <li><i class="bi bi-check-circle-fill"></i>Guidance for running Planning Poker behind
                                company domains</li>
                            <li><i class="bi bi-check-circle-fill"></i>Troubleshooting and upgrades</li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-puzzle"></i>
                        </div>
                        <h3>Custom Features</h3>
                        <ul class="feature-list">
                            <li><i class="bi bi-check-circle-fill"></i>Organization-specific features</li>
                            <li><i class="bi bi-check-circle-fill"></i>Branding (logo, colors, company name)</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Pricing Section -->
            <div class="pricing-section">
                <h3 class="text-center mb-4" style="font-size: 1.75rem; font-weight: 600; color: #1f2937;">Pricing</h3>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="pricing-card">
                            <h5>One-time Setup</h5>
                            <p class="price">€150–300</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="pricing-card">
                            <h5>Ongoing Support</h5>
                            <p class="price">€50–100<span style="font-size: 1rem; font-weight: 400; color: #6b7280;"> /
                                    month</span></p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="pricing-card">
                            <h5>Custom Features</h5>
                            <p class="price" style="font-size: 1.25rem;">Hourly or fixed price</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Section -->
            <div class="contact-section">
                <h3>Get in Touch</h3>
                <div class="contact-links">
                    <a href="mailto:mo.reza.hoque@gmail.com" class="contact-link">
                        <i class="bi bi-envelope"></i>
                        <span>Email</span>
                    </a>
                    <a href="https://github.com/RezaHoque/planning-poker/discussions" target="_blank"
                        class="contact-link">
                        <i class="bi bi-github"></i>
                        <span>GitHub Discussions</span>
                    </a>
                    <a href="https://www.linkedin.com/in/rezahoque" target="_blank" class="contact-link">
                        <i class="bi bi-linkedin"></i>
                        <span>LinkedIn</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
